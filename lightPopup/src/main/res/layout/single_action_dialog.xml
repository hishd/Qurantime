<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/container_white_bg_round"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/gilroy_bold"
        android:lines="1"
        android:text="Dialog Title"
        android:textColor="@color/general"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/gilroy_semi_bold"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla et dictum risus, ut malesuada metus. Praesent fringilla vel metus eu vestibulum."
        android:textColor="@color/dark_semi" />


    <Button
        android:maxLines="1"
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/txtMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/button_general_round"
        android:fontFamily="@font/gilroy_bold"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Button Text"
        android:textAllCaps="false"
        android:textColor="@color/white" />


</RelativeLayout>